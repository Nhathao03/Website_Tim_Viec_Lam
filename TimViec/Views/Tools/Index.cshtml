@{
    Layout = "~/Views/Shared/_LayoutTimViec.cshtml";
}

<link rel="stylesheet" href="../../css/popup.css">
<div class="top-banner" style="background-image: url(../../assets/img/background.png); height: 150px">
    <div class="container top-banner_content">
        <div class="top-banner_content-detail">
            <h1 style="color: white;font-size: 30px;margin-top: 15px;" class="title">List sample CV applicant simple 2023</h1>
            <p style="color: white;font-size: 18px;" class="caption">
                All sample designed by industry.<br>
                Reasonable with all student and worker.
            </p>
        </div>

    </div>
</div>

<div class="container">
    <div class="header" style="margin-top: 15px">
        <div class="filters">
            <select id="language" style="width: 150px;height: 35px;border-radius: 5px;color: black">
                <option value="vi">Tiếng Việt</option>
                <option value="en">English</option>
            </select>
            <select id="style" style="width: 150px;height: 35px;border-radius: 5px; color: black">
                <option value="simple">Đơn giản</option>
                <option value="modern">Hiện đại</option>
            </select>
        </div>  
    </div>
    <section id="explore" class="explore" style="padding-top:0">
        <div class="container">
            <div class="explore-content" style="margin-top: 25px !important">
                <div class="row">
                    @for (var i =0; i< 10; i++)
                    {
                        <div class=" col-md-4 col-sm-6" style="width: 24.333333% !important">
                            <div class="single-explore-item">
                                <div class="single-explore-img">
                                    <img style="height: 200px; width: 100%; object-fit: scale-down" src="../../LayoutTimViec/img/floware.png" alt="explore image">
                                    <div class="single-explore-img-info">
                                        <div class="single-explore-image-icon-box" style="font-family: Arial">
                                            <ul>
                                                <li onclick="openPopup()" style="border-radius: 10px; width: 65px !important; background: lightslategray; color: white; cursor: pointer ">
                                                    <div class="single-explore-image-icon">
                                                        <i class="fa fa-eye see_item" id_jobfv="Id"> See</i>
                                                    </div>
                                                </li>
                                                <li style="border-radius: 10px; width: 65px !important; background: #bec4ff;color: black; cursor: pointer; font-style:">
                                                    <div class="single-explore-image-icon">
                                                        <i class="use_item" id_jobfv="Id">Use</i>
                                                    </div>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="single-explore-txt bg-theme-1" style="padding: 5px">
                                    <h2>
                                        <a style="white-space: nowrap;overflow: hidden; text-overflow: ellipsis; width: 307px" href="#" class="Detail_Job" id_job=".Id">.Title</a>
                                    </h2>
                                    <p class="explore-rating-price">
                                        <a href="#">.R1_Language</a>
                                        <span>| R2_Language</span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div><!--/.container-->
    </section><!--/.explore-->
    

    <!-- Popup Preview -->
    <div class="popup" id="popup">
        <div class="popup-content">
            <span class="close" onclick="closePopup()">&times;</span>
            <div class="cv-preview">
                <div class="cv-left">
                    <h2>Nguyễn Văn A</h2>
                    <p>CHUYÊN VIÊN ĐÀO TẠO NỘI BỘ</p>
                    <p><i>"02 năm kinh nghiệm đào tạo kỹ năng bán hàng..."</i></p>
                    <h4>Kinh nghiệm làm việc</h4>
                    <p><strong>08/2020 - 08/2022</strong></p>
                    <p>Chuyên Viên Đào Tạo Nội Bộ</p>
                    <p>Công ty ABC</p>
                </div>
                <div class="cv-right">
                    <h4>Thông tin</h4>
                    <ul>
                        <li><strong>Điện thoại:</strong> 024-6860-5588</li>
                        <li><strong>Email:</strong> hotro@topcv.vn</li>
                        <li><strong>Địa chỉ:</strong> Quận A, Hà Nội</li>
                    </ul>
                    <h4>Học vấn</h4>
                    <p>Đại học TOPCV, 2016 - 2020</p>
                </div>
            </div>
            <button class="btn-use">Dùng mẫu này</button>
        </div>
    </div>
</div>

<script>
    function openPopup() {
        document.getElementById("popup").style.display = "flex";
    }

    function closePopup() {
        document.getElementById("popup").style.display = "none";
    }

</script>