@model List<TimViec.ViewModel.Get_template_by_category_ViewModel>
@{
    Layout = "~/Views/Shared/_LayoutTimViec.cshtml";
}

<link rel="stylesheet" href="../../css/popup.css">

<div class="top-banner" style="background-image: url(../../assets/img/background.png); height: 150px">
    <div class="container top-banner_content">
        <div class="top-banner_content-detail">
            <h1 style="color: white;font-size: 30px;margin-top: 15px;" class="title">List of standard CV templates 2023</h1>
            <p style="color: white;font-size: 18px;" class="caption">
                CV templates are designed according to each industry.<br>
                Suitable for both students and working people.
            </p>
        </div>
    </div>
</div>

<div class="container">
    <div class="header" style="margin-top: 15px">
        <div class="filters">
            <select id="style" class="select_category" style="width: 170px;height: 35px;border-radius: 5px; color: black">
                <option value="3">Simple</option>
                <option value="4">Elegant</option>
                <option value="5">Experience</option>
                <option value="6">Creative</option>
                <option value="7">Professional</option>
                <option value="8">Impression</option>
                <option value="9">Modern</option>
                <option value="10">Technology</option>
                <option value="11">ATS</option>
            </select>
        </div>
    </div>
    <section id="explore" class="explore" style="padding-top:0">
        <div class="container">
            <div class="explore-content" style="margin-top: 25px !important">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class=" col-md-4 col-sm-6" style="width: 20.333333% !important; margin-right: 35px">
                            <div class="single-explore-item" style="border-radius: 9px">
                                <div class="single-explore-img" style="border-radius: 9px">
                                    <img style="height: 200px; width: 100%; object-fit: scale-down" src="../../CV/background_image/@item.Image" alt="explore image">
                                    <div class="single-explore-img-info">
                                        <div class="single-explore-image-icon-box" style="font-family: Arial">
                                            <ul>
                                                <li onclick="openPopup()" style="border-radius: 10px; width: 85px !important; background-color: transparent; ; color: black; cursor: pointer;border: 2px solid #ffffff;">
                                                    <div class="single-explore-image-icon">
                                                        <i class="fa fa-eye see_item" id_jobfv="Id"> See</i>
                                                    </div>
                                                </li>
                                                <li style="border-radius: 10px; width: 85px !important; background-color: lightcoral ;color: black; cursor: pointer;">
                                                    <div class="single-explore-image-icon">
                                                        <a asp-controller="Tools" asp-action="CreateCV"><i class="use_item">Use</i></a>
                                                    </div>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="single-explore-txt bg-theme-1" style="padding: 5px">
                                    <h2>
                                        <a style="white-space: nowrap;overflow: hidden; text-overflow: ellipsis; width: 307px; margin: 5px" href="#" class="Detail_Job" id_job="@item.Id">@item.Category</a>
                                    </h2>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div><!--/.container-->
    </section><!--/.explore-->
</div>

<script>
    function openPopup() {
        document.getElementById("popup").style.display = "flex";
    }

    function closePopup() {
        document.getElementById("popup").style.display = "none";
    }
</script>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.select_category').change(function () {
                let id = $('.select_category').find(':selected').val();
                window.location.href = '/Tools/Gettemplatebycategory?category_id=' + id;
            })
        })
    </script>
}

