@model List<TimViec.ViewModel.All_Company_ViewModel>
@{
	ViewData["Title"] = "Job";
	Layout = "~/Views/Shared/_LayoutTimViec.cshtml";
}

<style>
	.card-container1 {
		display: inline-grid;	
		gap: 16px;
		justify-content: center;
		padding: 17px;
	}

	.card1 {
		background: #fff;
		border: 1px solid #ddd;
		border-radius: 8px;
		width: 250px;
		box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
		overflow: hidden;
		position: relative;
	}

	.image-wrapper1 {
		position: relative;
		width: 100%;
		height: 150px;
	}

	.background-image1 {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.overlay-image1 {
		position: absolute;
		bottom: -20px;
		left: 16px;
		width: 80px;
		height: 80px;
		border: 2px solid #fff;
		border-radius: 50%;
		box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
	}

	.card-content1 {
		padding: 20px;
		text-align: left;
	}

		.card-content1 h3 {
			margin: 0;
			font-size: 18px;
			color: #333;
		}

		.card-content1 p {
			margin: 8px 0;
			font-size: 14px;
			color: #555;
		}

		.card-content1 a {
			color: lightcoral;
			transition: color 0.3s;
		}

			.card-content1 a:hover {
				color: #0056b3;
			}

</style>

<!--welcome-hero start -->
<section id="home" class="welcome-hero" style="height: 220px;">
	<div class="container">
		<div class="welcome-hero-serch-box">
			<div class="welcome-hero-form">
				<div class="single-welcome-hero-form">
					<h3>what?</h3>
					<form>
						<input type="text" id="stringsearch" placeholder="Enter Company Keyword" style="color: black"/>
					</form>
					<div class="welcome-hero-form-icon">
						<i class="flaticon-list-with-dots"></i>
					</div>
				</div>
				<div class="single-welcome-hero-form">
					<h3>location</h3>
					<select name="cars" id="cars" class="select_city" style="color: black;width: 250px;margin-left: 20px;border-style: none;font-size: 15px;">
						<option value="0">Select location</option>
						<option value="1">Hồ Chí Minh</option>
						<option value="2">Hà Nội</option>
						<option value="3">Đà Nẵng</option>
						<option value="4">Different</option>
					</select>
					<div class="welcome-hero-form-icon">
						<i class="flaticon-gps-fixed-indicator"></i>
					</div>
				</div>
			</div>
			<div class="welcome-hero-serch">
				<button class="welcome-hero-btn btn_search" type="button">
					search  <i data-feather="search"></i>
				</button>
			</div>
		</div>
	</div>
</section><!--/.welcome-hero-->
<section id="explore" class="explore">
	<div class="container">
		<h1>
			<strong class="tit-top tit_txt font-size20">
				<span style="color: lightcoral">@ViewBag.CountCompany</span>
				Companies in Total
			</strong>
		</h1>
		<div class="explore-content" style="margin-top: 20px">
			<div class="row">
				@foreach (var item in Model)
				{
					<div class="card-container1">
						<div class="card1">
							<div class="image-wrapper1">
								<!-- Image 1 -->
								<img src="~/LayoutTimViec/img/@item.Background" alt="Background Image" class="background-image1">
								<!-- Image 2 -->
								<img src="~/LayoutTimViec/img/@item.Image" alt="Logo" class="overlay-image1">
							</div>
							<div class="card-content1">
								<h3><a style="white-space: nowrap;overflow: hidden; text-overflow: ellipsis; width: 208px; color: black" asp-action="Details_CPN" asp-route-id="@item.Id">@item.Company_name</a></h3>
								<p style="white-space: nowrap;overflow: hidden; text-overflow: ellipsis; width: 208px; color: black">@item.Location</p>
								<a asp-action="Details_CPN" asp-route-id="@item.Id">@item.Jobs_Count Job ➔</a>
							</div>
						</div>
					</div>					
				}
			</div>
		</div>
	</div><!--/.container-->
</section><!--/.explore-->
<!--explore end -->