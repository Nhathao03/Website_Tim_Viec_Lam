@model TimViec.Models.StatusJob

@{
    ViewData["Title"] = "Delete_Status";
    Layout = "~/Views/Shared/_LayoutTimViec.cshtml";
}
<br />
<p style="text-align: center; font-size: 23px; color: black">Bạn chắc chắn không muốn ứng tuyển công việc @ViewBag.Jobname?</p>
<div style="margin-left: 500px; color: black; font-size: 18px">
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <p>Họ và tên</p>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Fullname)
        </dd>
        <dt>
            <p>Email</p>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            <p>Tên công việc</p>
        </dt>
        <dd>
            @ViewBag.Jobname
        </dd>
        <dt>
            <p>Công ty</p>
        </dt>
        <dd>
            @ViewBag.CompanyName.CompanyName1
        </dd>
        <dt>
            <p>Ghi chú</p>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Note)
        </dd>
        <dt>
            <p>Trạng thái</p>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt>
            <p>Ảnh CV</p>
        </dt>
        <dd>
            <img src="~/@Html.DisplayFor(model => model.imgCV)" style="width: 400px;" />
        </dd>
    </dl>

    <form asp-action="Delete_Status" style="margin-left: 300px;">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Thu hồi đơn ứng tuyển" class="btn btn-danger" /> |
        <button type="submit" asp-action="StJ" class="btn btn-primary">Trở về</button>
    </form>
</div>
