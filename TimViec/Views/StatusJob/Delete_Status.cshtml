@model TimViec.Models.StatusJob

@{
    ViewData["Title"] = "Delete_Status";
    Layout = "~/Views/Shared/_LayoutTimViec.cshtml";
}
<br />
<p style="text-align: center; font-size: 23px; color: black">Are you sure you don't want to apply for the job @ViewBag.Jobname?</p>
<div style="margin-left: 500px; color: black; font-size: 18px">
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <p>Full name</p>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Fullname)
        </dd>
        <dt>
            <p>Email</p>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            <p>Job name</p>
        </dt>
        <dd>
            @ViewBag.Jobname
        </dd>
        <dt>
            <p>Company</p>
        </dt>
        <dd>
            @ViewBag.CompanyName.CompanyName1
        </dd>
        <dt>
            <p>Note</p>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Note)
        </dd>
        <dt>
            <p>Image CV</p>
        </dt>
        <dd>
            <img src="~/@Html.DisplayFor(model => model.imgCV)" style="width: 400px;" />
        </dd>
    </dl>

    <form asp-action="Delete_Status" style="margin-left: 300px;">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Withdraw application" class="btn btn-danger" /> |
        <button type="submit" asp-action="StJ" class="btn btn-primary">Back</button>
    </form>
</div>
