    <!--font-family-->
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- title of site -->
    <title>Job Search</title>
    <!-- For favicon png -->
    <link rel="shortcut icon" type="image/icon" href="../../LayoutTimViec/logo/logo.png" />

    <!--font-awesome.min.css-->
    <link rel="stylesheet" href="../../assets/css/font-awesome.min.css">

    <!--linear icon css-->
    <link rel="stylesheet" href="../../assets/css/linearicons.css">

    <!--animate.css-->
    <link rel="stylesheet" href="../../assets/css/animate.css">

    <!--flaticon.css-->
    <link rel="stylesheet" href="../../assets/css/flaticon.css">

    <!--slick.css-->
    <link rel="stylesheet" href="../../assets/css/slick.css">
    <link rel="stylesheet" href="../../assets/css/slick-theme.css">

    <!--bootstrap.min.css-->
    <link rel="stylesheet" href="../../assets/css/bootstrap.min.css">

    <!-- bootsnav -->
    <link rel="stylesheet" href="../../assets/css/bootsnav.css">

    <!--style.css-->
    <link rel="stylesheet" href="../../assets/css/style.css">

    <!--responsive.css-->
    <link rel="stylesheet" href="../../assets/css/responsive.css">

</head>

<body>
    
    <!--[if lte IE 9]>
           <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="https://browsehappy.com/">upgrade your browser</a> to improve your experience and security.</p>
       <![endif]-->
    <!--header-top start -->
    <header id="header-top" class="header-top">
        <ul>
            <li>
                <div class="header-top-left">
                    <ul>
                        <li class="select-opt">
                            <a href="#"><span></span></a>
                        </li>
                    </ul>
                </div>
            </li>
            <li class="head-responsive-right pull-right">
                <div class="header-top-right">
                    <partial name="_LoginPartial" />
                </div>
            </li>
        </ul>

    </header><!--/.header-top-->
    <!--header-top end -->
    <!-- top-area Start -->
    <section class="top-area">
        <div class="header-area">
            <!-- Start Navigation -->
            <nav class="navbar navbar-default bootsnav  navbar-sticky navbar-scrollspy" data-minus-value-desktop="70"
                 data-minus-value-mobile="55" data-speed="1000">

                <div class="container">

                    <!-- Start Header Navigation -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-menu">
                            <i class="fa fa-bars"></i>
                        </button>
                        <a class="navbar-brand" href="/Home/Index" style="font-size: 45px">Dev<span>IT</span></a>
                    </div><!--/.navbar-header-->
                    <!-- End Header Navigation -->
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse menu-ui-design" id="navbar-menu">
                        <ul class="nav navbar-nav navbar-right" data-in="fadeInDown" data-out="fadeOutUp"
                            style="margin-right: 350px">
                            <div class="dropdn">
                                <button class="dropbtn"><a href="/Home/Index">Home</a></button>
                            </div>
                            <div class="dropdn">
                                <button class="dropbtn">IT Jobs</button>
                                <div class="dropdn-content">
                                    <div class="dropdn-submenu">
                                        <a href="#">By Skill</a>
                                        <div class="dropdn-submenu-content">
                                            <table>
                                                @if (ViewBag.Skill != null && ViewBag.Skill.Count > 0)
                                                {
                                                    string dataMenu = string.Empty;
                                                    for (int i = 0; i < ViewBag.Skill.Count; i++)
                                                    {
                                                        if (i % 4 == 0)
                                                        {
                                                            dataMenu
                                                    += "<tr>";
                                                        }
                                                        dataMenu
                                                    += "<td><a style=cursor:pointer href='/Search/ChoeseSearchSkill/" +
                                                    ViewBag.Skill[i].Id + "'>" + ViewBag.Skill[i].Skills + "</a></td>";
                                                    }
                                                    @Html.Raw(dataMenu)
                                                    ;
                                                }
                                            </table>
                                        </div>
                                    </div>
                                    <div class="dropdn-submenu">
                                        <a href="#">By Type</a>
                                        <div class="dropdn-submenu-content">
                                            <table>
                                                @if (ViewBag.Type != null && ViewBag.Type.Count > 0)
                                                {
                                                    string dataMenu = string.Empty;
                                                    for (int i = 0; i < ViewBag.Type.Count; i++)
                                                    {
                                                        if (i == 0 || i % 4 == 0)
                                                        {
                                                            dataMenu += "<tr>";
                                                        }
                                                        dataMenu
                                                            += "<tr><a style=cursor:pointer href='/Search/ChoeseSearchType/" +
                                                            ViewBag.Type[i].Id + "'>" + ViewBag.Type[i].Type + "</a></t>"; if
                                                            (i % 4 == 0) { dataMenu += "</tr>"; }
                                                    }
                                                    @Html.Raw(dataMenu)
                                                    ;
                                                }
                                            </table>
                                        </div>
                                    </div>
                                    <div class="dropdn-submenu">
                                        <a href="#">By Rank</a>
                                        <div class="dropdn-submenu-content">
                                            <table>
                                                @if (ViewBag.Rank != null && ViewBag.Rank.Count > 0)
                                                {
                                                    string dataMenu = string.Empty;
                                                    for (int i = 0; i < ViewBag.Rank.Count; i++)
                                                    {
                                                        if (i == 0 || i % 4 == 0)
                                                        {
                                                            dataMenu += "<tr>";
                                                        }
                                                        dataMenu
                                                            += "<tr><a style=cursor:pointer  href='/Search/ChoeseSearchRank/" +
                                                            ViewBag.Rank[i].Id + "'>" + ViewBag.Rank[i].rank + "</a></t>"; if
                                                            (i % 4 == 0) { dataMenu += "</tr>"; }
                                                    }
                                                    @Html.Raw(dataMenu)
                                                    ;
                                                }
                                            </table>
                                        </div>
                                    </div>
                                    <div class="dropdn-submenu">
                                        <a href="#">By Address</a>
                                        <div class="dropdn-submenu-content">
                                            <table>
                                                @if (ViewBag.Location != null && ViewBag.Location.Count > 0)
                                                {
                                                    string dataMenu = string.Empty;
                                                    for (int i = 0; i < ViewBag.Location.Count; i++)
                                                    {
                                                        if (i == 0 || i % 4 == 0)
                                                        { dataMenu += "<tr>"; }
                                                        dataMenu
                                                        += "<tr><a style=cursor:pointer  href='/Search/ChoeseSearchLocation/"
                                                        + ViewBag.Location[i].Id + "'>" + ViewBag.Location[i].Name_city
                                                        + "</a></t>"; if (i % 4 == 0) { dataMenu += "</tr>"; }
                                                    }
                                                    @Html.Raw(dataMenu)
                                                    ;
                                                }
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="dropdn">
                                <button class="dropbtn"><a href="/Job/Job">Job</a></button>
                            </div>
                            <div class="dropdn">
                                <button class="dropbtn"><a href="/Company/Company">Company</a></button>
                            </div>
                            <div class="dropdn">
                                <button class="dropbtn"><a href="/StatusJob/StatusJob">Status job</a>
                            </div>
                            <div class="dropdn">
                                <button class="dropbtn"><a href="/Job/GetAllFavouriteJob">Favorite job</a>
                            </div>
                        </ul><!--/.nav -->
                    </div><!-- /.navbar-collapse -->
                </div><!--/.container-->
            </nav><!--/nav-->
            <!-- End Navigation -->
        </div><!--/.header-area-->
        <div class="clearfix"></div>

    </section><!-- /.top-area-->
    <!-- top-area End -->
    @RenderBody()

    <!--footer start-->
    <footer id="footer" class="footer">
        <div class="container">
            <div class="footer-menu">
                <div class="row">
                    <div class="col-sm-3">
                        <div class="navbar-header">
                            <a class="navbar-brand" href="/Home/Index" style="font-size: 45px">Dev<span>IT</span></a>
                        </div><!--/.navbar-header-->
                    </div>
                </div>
            </div>
            <div class="hm-footer-copyright">
                <div class="row">
                    <div class="col-sm-5">
                        <p>
                            Website Job Search make by Hà Nhật Hào
                        </p><!--/p-->
                    </div>
                    <div class="col-sm-7">
                        <div class="footer-social">
                            <span><i class="fa fa-phone"> +84 366768703</i></span>
                            <a href="https://www.facebook.com/nhathao721179786105/"><i class="fa fa-facebook"></i></a>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-linkedin"></i></a>
                            <a href="#"><i class="fa fa-google-plus"></i></a>
                        </div>
                    </div>
                </div>

            </div><!--/.hm-footer-copyright-->
        </div><!--/.container-->

        <div id="scroll-Top">
            <div class="return-to-top">
                <i class="fa fa-angle-up " id="scroll-top" data-toggle="tooltip" data-placement="top" title=""
                   data-original-title="Back to Top" aria-hidden="true"></i>
            </div>

        </div><!--/.scroll-Top-->

    </footer><!--/.footer-->
    <!--footer end-->
