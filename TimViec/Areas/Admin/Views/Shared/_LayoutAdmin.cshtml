@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Quản lý</title>

    <link rel="shortcut icon" type="image/icon" href="../../LayoutTimViec/logo/manage.png" />
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
    <link href="~/Admin/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>

</head>
<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3" asp-area="Admin" asp-controller="Manager" asp-action="Job">Quản lý Website</a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
        <!-- Navbar Search-->
        <!-- Navbar-->
        <div style="margin-left: 1307px">
            @if (SignInManager.IsSignedIn(User))
            {
                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
                    <ul class="nav navbar-nav">
                        <li>
                            <button style="text-decoration: none;color: white;font-size: 20px;" type="submit" class="btn btn-link navbar-btn navbar-link">
                                Đăng xuất
                            </button>
                        </li>
                    </ul>
                </form>
            }
        </div>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <a class="nav-link" asp-area="Admin" asp-controller="Manager" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-house"></i></div>
                            Trang chủ
                        </a>
                        <div class="sb-sidenav-menu-heading">Danh sách</div>
                        <a class="nav-link" asp-area="Admin" asp-controller="Manager" asp-action="Job">
                            <div class="sb-nav-link-icon"><i class="fas fa-bars"></i></div>
                            Công việc
                        </a>
                        <a class="nav-link" asp-area="Admin" asp-controller="Manager" asp-action="Company">
                            <div class="sb-nav-link-icon"><i class="fas fa-hotel"></i></div>
                            Công ty
                        </a>

                        <div class="sb-sidenav-menu-heading">Tài khoản</div>
                        <a class="nav-link" asp-area="Admin" asp-controller="Manager" asp-action="Account_User">
                            <div class="sb-nav-link-icon"><i class="fas fa-user"></i></div>
                            Người tìm việc
                        </a>
                        <a class="nav-link" asp-area="Admin" asp-controller="Manager" asp-action="Account_Company">
                            <div class="sb-nav-link-icon"><i class="fas fa-user-group"></i></div>
                            Công ty
                        </a>
                        <div class="sb-sidenav-menu-heading">Quản lý CV</div>
                        <a class="nav-link" asp-area="Admin" asp-controller="Manager" asp-action="Account_User">
                            <div class="sb-nav-link-icon"><i class="fas fa-bars"></i></div>
                            Danh sách CV
                        </a>
                        <a class="nav-link" asp-area="Admin" asp-controller="Template" asp-action="AddNewTemplateSample">
                            <div class="sb-nav-link-icon"><i class="fas fa-plus"></i></div>
                            Thêm mẫu CV
                        </a>
                        <a class="nav-link" asp-area="Admin" asp-controller="TypeCV" asp-action="ListNew_TypeCV">
                            <div class="sb-nav-link-icon"><i class="fas fa-bars"></i></div>
                            Danh sách loại CV
                        </a>
                        <div class="sb-sidenav-menu-heading">Phản hồi</div>
                        <a class="nav-link" asp-area="Admin" asp-controller="Manager" asp-action="Getfeedback">
                            <div class="sb-nav-link-icon"><i class="fas fa-triangle-exclamation"></i></div>
                            Phản hồi của người dùng
                        </a>
                    </div>
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <!--modernizr.min.js-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js"></script>
    <script src="~/Admin/js/scripts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="~/Admin/assets/demo/chart-area-demo.js"></script>
    <script src="~/Admin/assets/demo/chart-bar-demo.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js" crossorigin="anonymous"></script>
    <script src="~/Admin/js/datatables-simple-demo.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
