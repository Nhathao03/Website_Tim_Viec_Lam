@model TimViec.Models.Company
@{
    ViewData["Title"] = "Details_AccountCompany";
}


<h1>Chi tiết tài khoản công ty @Html.DisplayFor(model => model.Name_company)</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên công ty
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name_company)
        </dd>
        <dt class="col-sm-2">
            Tên đăng nhập
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Ảnh công ty
        </dt>
        <dd class="col-sm-10">
            <img src="~/LayoutTimViec/img/@Html.DisplayFor(model => model.Image)" alt="Profile" >
        </dd>
        <dt class="col-sm-2">
            Loại hình
        </dt>
        <dd class="col-sm-10">
            @if ( Model.Company_type == "1")
            {
                <p>In Office</p>
            }
            else if (Model.Company_type == "2")
            {
                <p>Hybird</p>
            }
            else if (Model.Company_type == "3")
            {
                <p>Remote</p>
            }
            else
            {
                <p>Oversea</p>
            }
        </dd>
        <dt class="col-sm-2">
            Quy mô
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company_size)
        </dd>
        <dt class="col-sm-2">
            Thành phố
        </dt>
        <dd class="col-sm-10">
            @if (Model.Company_type == "1")
            {
                <p>Hồ Chí Minh</p>
            }
            else if (Model.Company_type == "2")
            {
                <p>Hà Nội</p>
            }
            else if (Model.Company_type == "3")
            {
                <p>Đà Nẵng</p>
            }
            else
            {
                <p>Khác</p>
            }
        </dd>
        <dt class="col-sm-2">
            Địa chỉ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
   

    </dl>
    </div>
    <br />
<a href="/Admin/Manager/Account_Company" class="btn btn-primary" style="float: right">Quay lại</a>
