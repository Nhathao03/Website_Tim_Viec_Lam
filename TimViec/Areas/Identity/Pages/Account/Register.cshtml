@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LayoutTimViec.cshtml";
}

<br />
<style>
    .col-md-4 {
        border: black solid 2px;
        border-radius: 15px;
    }
</style>
<script>
    function togglePassword() {
        const passwordField = document.getElementById("password");
        if (passwordField.type === "password") {
            passwordField.type = "text";
        } else {
            passwordField.type = "password";
        }
    }

    function togglePassword2() {
        const passwordField = document.getElementById("password2");
        if (passwordField.type === "password") {
            passwordField.type = "text";
        } else {
            passwordField.type = "password";
        }
    }

</script>
<body>
    <div class="row">
        <div class="container">
            <div class="col-md-8">
                <section>
                    <h3 style="font-size: 24px"><b>Welcome to</b><b style="color: red;"> Dev IT</b></h3>
                    <hr style="border: 1px solid black" />
                    @{
                        if ((Model.ExternalLogins?.Count ?? 0) != 0)
                        {
                            <div>
                                <p>
                                    By continuing, you agree to Dev IT's <a href="/Home/Rules">Terms of Use</a> and <a href="/Home/Policy">Privacy Policy </a> regarding to your private information.
                                </p>
                                <b>Log in now to take full advantage of Dev IT tools and increase your chances of accessing the hottest IT jobs</b>
                                <ul>
                                    <li>Apply faster with your saved profile.</li>
                                    <li>Manage application documents and track application status updates.</li>
                                    <li>View salary for each position</li>
                                    <li>Save your favorite jobs to apply for later</li>
                                    <li>Take personality assessment tests</li>
                                </ul>
                            </div>
                        }
                    }
                </section>
            </div>
            <div class="col-md-4">
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h1 style="text-align: center; margin-top: 5px">Create New Account</h1>
                    <br />
                    <button style="width: 48%" type="button" class="btn btn-primary">Applicant</button> | <a asp-page="./RegisterCompany" asp-route-returnUrl="@Model.ReturnUrl" style="width: 48%" type="button" class="btn btn-success">Employer</a>

                    <div class="row gx-3 mb-3">
                        <div class="col-md-6">
                            <label asp-for="Input.Firstname" style="font-weight: 450 !important; color: black">First name</label>
                            <input asp-for="Input.Firstname" class="form-control" placeholder="Enter first name"/>
                            <span asp-validation-for="Input.Firstname" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Input.Lastname" style="font-weight: 450 !important; color: black">Last name</label>
                            <input asp-for="Input.Lastname" class="form-control" placeholder="Enter last name" />
                            <span asp-validation-for="Input.Lastname" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Fullname" style="font-weight: 450 !important; color: black">Full name</label>
                        <input asp-for="Input.Fullname" class="form-control" placeholder="Enter fullname"/>
                        <span asp-validation-for="Input.Fullname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Email" style="font-weight: 450 !important; color: black"></label>
                        <input asp-for="Input.Email" class="form-control" placeholder="Enter email"/>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password" style="font-weight: 450 !important; color: black">Password</label>
                        <br />
                        <input type="password" id="password" asp-for="Input.Password" placeholder="  Enter password" style="width: 100%; height: 35px" />
                        <br />
                        <input type="checkbox" onclick="togglePassword()" style="margin-top: 5px"> Show Password
                        <br />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword" style="font-weight: 450 !important; color: black">Confirm Password</label>
                        <br />
                        <input type="password" id="password2" asp-for="Input.ConfirmPassword" placeholder="  Enter confirm password" style="width: 100%; height: 35px"/>
                        <br />
                        <input type="checkbox" onclick="togglePassword2()" style="margin-top: 5px"> Show Password
                        <br />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-default btn-primary" style="width: 100%; font-size: 18px">Register</button>
                    <br />
                    <br />
                    <a asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" class="nav-link">Have an account</a>
                </form>
            </div>
        </div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
