@page
@model IndexModel
@{
    ViewData["Title"] ="Hồ sơ";
    ViewData["ActivePage"] = ManageNavPages.Index; 
    
}
<partial name="_StatusMessage" model="Model.StatusMessage" />



 <div class="row">
     <div class="col-xl-12">
         <!-- Account details card-->
         <div class="card mb-4">
             <div class="card-body">
                 <form method="post" enctype="multipart/form-data">
                     <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                     <div class="row gx-3 mb-3">
                         <div class="col-md-6">
                             <label asp-for="Input.Firstname">Họ</label>
                             <input asp-for="Input.Firstname" class="form-control" />
                             <span asp-validation-for="Input.Firstname" class="text-danger"></span>
                         </div>

                         <div class="col-md-6">
                             <label asp-for="Input.Lastname">Tên</label>
                             <input asp-for="Input.Lastname" class="form-control" />
                             <span asp-validation-for="Input.Lastname" class="text-danger"></span>
                         </div>
                     </div>
                     <div class="mb-3">
                         <label asp-for="Input.Fullname">Họ và tên</label>
                         <input asp-for="Input.Fullname" class="form-control" />
                         <span asp-validation-for="Input.Fullname" class="text-danger"></span>
                     </div>
                     <div class="mb-3">
                         <label asp-for="Input.Birth">Ngày sinh</label>
                         <input asp-for="Input.Birth" class="form-control" />
                         <span asp-validation-for="Input.Birth" class="text-danger"></span>
                     </div>
                     <div class="mb-3">
                         <label asp-for="Username">Email</label>
                         <input asp-for="Username" class="form-control" disabled />
                     </div>

                     <div class="mb-3">
                         <label asp-for="Input.PhoneNumber">Số điện thoại</label>
                         <input asp-for="Input.PhoneNumber" class="form-control" />
                         <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                     </div>
                     <br />
                     <button id="update-profile-button" class="btn btn-primary" type="submit">Lưu thay đổi</button>
                 </form>
             </div>
         </div>
     </div>
 </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<link rel="stylesheet" href="../../LayoutTimViec/css/Profile.css">
